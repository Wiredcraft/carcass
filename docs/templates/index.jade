doctype html
html(lang='en')
    head
        title= title
        link(rel='stylesheet', href='#{meta.base}/assets/vendor.css')
        link(rel='stylesheet', href='#{meta.base}/assets/style.css')
        //- script(src='#{meta.base}/assets/index.js')
    body
        #layout
            header#menu
                section
                    a.title(href='#top') Top
                section
                    a.title(href='#api') API list
                    ul
                        for api in collections.api
                            li
                                a(href='##{api.id}')= api.title
            section#main
                section.hero
                    a#top(href='#top')
                    h1 Carcass
                    != contents
                section.details
                    a#api(href='#api')
                    for api in collections.api
                        h2(id='#{api.id}')
                            a(href='##{api.id}')= api.title
                        != api.contents

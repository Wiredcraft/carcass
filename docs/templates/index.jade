doctype html
html(lang='en')
    head
        title= title
        link(rel='stylesheet', href='#{meta.base}/assets/vendor.css')
        link(rel='stylesheet', href='#{meta.base}/assets/style.css')
        //- script(src='#{meta.base}/assets/index.js')
    body
        a(href='#top', id='top')
        #layout
            header#menu
                section
                    a(href='#top').title Top
                section
                    a(href='#api').title API list
                    ul
                        for api in collections.api
                            li
                                a(href='##{api.id}')= api.title
            section#main
                section.hero
                    h1 Carcass
                    != contents
                section.details
                    a(href='#api', id='api')
                    for api in collections.api
                        h2(id='#{api.id}')= api.title
                        != api.contents

